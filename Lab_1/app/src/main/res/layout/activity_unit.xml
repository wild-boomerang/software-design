<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.bsuir.wildboom.lab1.UnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment android:name="by.bsuir.wildboom.lab1.UnitFragment"
            android:id="@+id/UnitFragment"
            android:layout_width="match_parent"
            android:layout_height="385dp" />

        <fragment android:name="by.bsuir.wildboom.lab1.KeyboardFragment"
            android:id="@+id/FragmentKeyboard"
            android:layout_width="match_parent"
            android:layout_height="370dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>