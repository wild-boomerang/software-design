<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.bsuir.wildboom.lab2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cooldown"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cooldown_round"
        android:supportsRtl="true"
        android:theme="@style/NewAppTheme">
        <service
            android:name="by.bsuir.wildboom.lab2.TimerService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="by.bsuir.wildboom.lab2.SettingsActivity" />
        <activity android:name="by.bsuir.wildboom.lab2.CreateUpdateActivity" />
        <activity android:name="by.bsuir.wildboom.lab2.TimerActivity"
                  android:noHistory="true"/>
        <activity android:name="by.bsuir.wildboom.lab2.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="by.bsuir.wildboom.lab2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>